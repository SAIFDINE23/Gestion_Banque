<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <!-- Afficher les informations du conseiller -->
    <TextView
        android:id="@+id/selectedAdvisorInfo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Conseiller: [Nom du conseiller]"
        android:textSize="18sp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"/>

    <!-- Afficher la date du rendez-vous -->
    <TextView
        android:id="@+id/selectedDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Date: [Date sélectionnée]"
        android:textSize="16sp"
        android:layout_below="@id/selectedAdvisorInfo"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"/>

    <!-- Afficher le créneau horaire -->
    <TextView
        android:id="@+id/selectedSlot"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Créneau: [Heure]"
        android:textSize="16sp"
        android:layout_below="@id/selectedDate"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"/>

    <!-- Bouton pour confirmer le rendez-vous -->
    <Button
        android:id="@+id/confirmAppointmentButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Confirmer le rendez-vous"
        android:layout_below="@id/selectedSlot"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"/>
</RelativeLayout>
