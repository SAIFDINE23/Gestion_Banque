<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tvClientFullName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nom Complet"
            android:textSize="22sp"
            android:textStyle="bold"
            android:paddingBottom="8dp"/>
        <TextView
            android:id="@+id/tvClientid"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="L'id unique"
            android:textSize="18sp"
            android:paddingBottom="4dp"/>

        <TextView
            android:id="@+id/tvClientAgency"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Agence"
            android:textSize="18sp"
            android:paddingBottom="4dp"/>

        <TextView
            android:id="@+id/tvClientPhone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Téléphone"
            android:textSize="18sp"
            android:paddingBottom="4dp"/>

        <TextView
            android:id="@+id/tvClientAddress"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Adresse"
            android:textSize="18sp"
            android:paddingBottom="4dp"/>

        <TextView
            android:id="@+id/tvClientBirthday"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Date de naissance : 26/01/2003"
            android:textSize="18sp"
            android:paddingBottom="4dp"/>

    </LinearLayout>
</ScrollView>
